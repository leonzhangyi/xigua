<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="4dip" />
            <gradient
                android:angle="270.0"
                android:centerColor="#0d000000"
                android:endColor="#0d000000"
                android:startColor="#0d000000" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="4dip" />
                <gradient
                    android:angle="270.0"
                    android:centerColor="@color/net_resource_item_tv"
                    android:endColor="@color/net_resource_item_tv"
                    android:startColor="@color/net_resource_item_tv" />

            </shape>
        </clip>
    </item>
</layer-list>  

