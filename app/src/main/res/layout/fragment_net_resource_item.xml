<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/net_resource_item_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.bigkoo.convenientbanner.ConvenientBanner
            android:id="@+id/netConvenientBanner"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_marginLeft="@dimen/size_dp_16"
            android:layout_marginTop="@dimen/size_dp_10"
            android:layout_marginRight="@dimen/size_dp_16" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/net_resource_item_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/netConvenientBanner"
            android:layout_marginLeft="@dimen/size_dp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/size_dp_16"
            android:visibility="visible" />

        <include
            android:id="@+id/loading_lay"
            layout="@layout/include_loading_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

    </RelativeLayout>
</RelativeLayout>