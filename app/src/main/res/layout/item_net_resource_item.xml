<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/item_net_resource_image_2"
        android:layout_width="wrap_content"
        android:layout_height="150dp">
        <ImageView
            android:id="@+id/item_net_resource_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size_dp_3"
            android:layout_marginRight="@dimen/size_dp_3"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/item_net_resource_image_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size_dp_3"
            android:layout_marginRight="@dimen/size_dp_3"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@mipmap/video_blank_back" />


    </RelativeLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/item_net_resource_image_2"
        android:background="@drawable/dangban_up"
        android:visibility="gone" />

    <TextView
        android:id="@+id/item_net_resource_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_net_resource_image_2"
        android:layout_marginLeft="@dimen/size_dp_10"
        android:layout_marginRight="@dimen/size_dp_10"
        android:maxLines="1"
        android:paddingBottom="@dimen/size_dp_5"
        android:textColor="@color/gray_FD"
        android:textSize="@dimen/size_sp_12"
        android:visibility="gone" />


    <TextView
        android:id="@+id/item_net_resource_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_net_resource_image_2"
        android:layout_marginTop="@dimen/size_dp_5"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginLeft="@dimen/size_dp_3"
        android:text="电影名称"
        android:textColor="@color/black_D9"
        android:textSize="@dimen/size_sp_13" />
    <!--    android:layout_centerHorizontal="true"-->

    <TextView
        android:layout_marginLeft="@dimen/size_dp_3"
        android:id="@+id/item_net_resource_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_net_resource_name"
        android:layout_marginRight="@dimen/size_dp_5"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="电影名称"
        android:textColor="@color/black_40"
        android:textSize="@dimen/size_sp_10" />
</RelativeLayout>