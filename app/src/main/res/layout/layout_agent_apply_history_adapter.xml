<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/size_dp_1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_dp_30"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/agent_apply_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size_dp_1"
            android:layout_weight="1"
            android:background="#ffe5e5e5"
            android:gravity="center"
            android:text="申请时间"
            android:textColor="@color/black_D9"
            android:textSize="@dimen/size_sp_10" />

        <TextView
            android:id="@+id/agent_apply_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size_dp_1"
            android:layout_weight="1"
            android:background="#fff1f2f5"
            android:gravity="center"
            android:text="支付金额"
            android:textColor="@color/black_D9"
            android:textSize="@dimen/size_sp_10" />

        <TextView
            android:id="@+id/agent_apply_state"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffe5e5e5"
            android:gravity="center"
            android:text="申请状态"
            android:textColor="@color/black_D9"
            android:textSize="@dimen/size_sp_10" />
    </LinearLayout>
</LinearLayout>