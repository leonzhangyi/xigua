<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_dp_30"
    android:layout_marginTop="@dimen/size_dp_2"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/my_agent_name"
        android:layout_width="0dp"
        android:layout_marginRight="@dimen/size_dp_2"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:background="#ffe5e5e5"
        android:gravity="center"
        android:text="代理人"
        android:textColor="@color/black_D9"
        android:textSize="@dimen/size_sp_10" />

    <TextView
        android:layout_marginRight="@dimen/size_dp_2"
        android:id="@+id/my_agent_phone"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:background="#fff1f2f5"
        android:gravity="center"
        android:text="联系方式"
        android:textColor="@color/black_D9"
        android:textSize="@dimen/size_sp_10" />

    <TextView
        android:layout_marginRight="@dimen/size_dp_2"
        android:id="@+id/my_agent_time"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:background="#ffe5e5e5"
        android:gravity="center"
        android:text="加入时间"
        android:textColor="@color/black_D9"
        android:textSize="@dimen/size_sp_10" />

    <TextView
        android:layout_marginRight="@dimen/size_dp_2"
        android:id="@+id/my_agent_num"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:background="#fff1f2f5"
        android:gravity="center"
        android:text="名下用户数"
        android:textColor="@color/black_D9"
        android:textSize="@dimen/size_sp_10" />

    <TextView
        android:id="@+id/my_agent_handle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="#ffe5e5e5"
        android:gravity="center"
        android:text="设置"
        android:textColor="#FF0091FF"
        android:textSize="@dimen/size_sp_10" />
</LinearLayout>