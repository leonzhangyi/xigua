<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_dp_30"
        android:layout_marginTop="@dimen/size_dp_2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/agent_user_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size_dp_2"
            android:layout_weight="1.36"
            android:background="#ffe5e5e5"
            android:gravity="center"
            android:text="用户名"
            android:textColor="@color/black_D9"
            android:textSize="@dimen/size_sp_10" />

        <TextView
            android:id="@+id/agent_user_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size_dp_2"
            android:layout_weight="1"
            android:background="#fff1f2f5"
            android:gravity="center"
            android:text="会员类型"
            android:textColor="@color/black_D9"
            android:textSize="@dimen/size_sp_10" />

        <TextView
            android:id="@+id/agent_user_start_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size_dp_2"
            android:layout_weight="1"
            android:background="#ffe5e5e5"
            android:gravity="center"
            android:text="注册时间"
            android:textColor="@color/black_D9"
            android:textSize="@dimen/size_sp_10" />

        <TextView
            android:id="@+id/agent_user_end_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size_dp_2"
            android:layout_weight="1"
            android:background="#fff1f2f5"
            android:gravity="center"
            android:text="到期时间"
            android:textColor="@color/black_D9"
            android:textSize="@dimen/size_sp_10" />

        <TextView
            android:id="@+id/agent_user_handler"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fff1f2f5"
            android:gravity="center"
            android:text="增加会员"
            android:textColor="#FF0091FF"
            android:textSize="@dimen/size_sp_10" />
    </LinearLayout>
</LinearLayout>