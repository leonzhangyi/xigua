<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_dp_1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_dp_30"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/create_code_item_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:background="#ffe5e5e5"
            android:layout_marginRight="@dimen/size_dp_2"
            android:gravity="center"
            android:text="激活码"
            android:textColor="@color/black_D9"
            android:textSize="@dimen/size_sp_10" />

        <TextView
            android:id="@+id/create_code_item_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fff1f2f5"
            android:gravity="center"
            android:text="类型"
            android:layout_marginRight="@dimen/size_dp_2"
            android:textColor="@color/black_D9"
            android:textSize="@dimen/size_sp_10" />

        <TextView
            android:id="@+id/create_code_item_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.4"
            android:background="#ffe5e5e5"
            android:gravity="center"
            android:text="有效期"
            android:layout_marginRight="@dimen/size_dp_2"
            android:textColor="@color/black_D9"
            android:textSize="@dimen/size_sp_10" />

        <TextView
            android:id="@+id/create_code_item_copy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fff1f2f5"
            android:gravity="center"
            android:text="复制"
            android:textColor="#FF0091FF"
            android:textSize="@dimen/size_sp_10" />
    </LinearLayout>

</LinearLayout>