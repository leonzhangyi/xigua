<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/size_dp_50"
    android:layout_marginRight="@dimen/size_dp_50"
    android:background="@mipmap/home_dialog_bac"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/me_about_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="@dimen/dp_10"
        android:src="@mipmap/about_close" />

    <ImageView
        android:id="@+id/layout_home_image"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp" />

    <TextView
        android:layout_marginRight="@dimen/size_dp_16"
        android:layout_marginLeft="@dimen/size_dp_16"
        android:id="@+id/layout_home_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_home_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size_dp_30"
        android:text="30"
        android:textColor="#FFFFFF00"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/layout_home_dialog_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_home_tv1"
        android:layout_marginLeft="@dimen/size_dp_32"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/size_dp_32"
        android:text="为防止苹果用户无法打开App， 请保存二维码即是下载最新版本"
        android:textColor="@color/white" />

    <RelativeLayout
        android:id="@+id/layout_home_download"
        android:layout_width="96dp"
        android:layout_height="30dp"
        android:layout_below="@+id/layout_home_dialog_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size_dp_30"
        android:layout_marginBottom="@dimen/size_dp_24"
        android:background="@drawable/layout_home_dialog_btn_bac">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="马上保存"
            android:textColor="#FFE02020"
            android:textSize="@dimen/size_sp_16" />


    </RelativeLayout>
</RelativeLayout>