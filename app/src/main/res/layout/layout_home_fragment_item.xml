<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_sp_24">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.sunfusheng.GlideImageView
            android:id="@+id/home_fragment_item_iv"
            android:layout_width="@dimen/size_dp_44"
            android:layout_height="@dimen/size_dp_44"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/home_fragment_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_sp_5"
            android:textColor="@color/main_item_tv"
            android:textSize="@dimen/size_sp_11" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_home_item_line"
        android:layout_width="@dimen/size_dp_44"
        android:layout_height="@dimen/size_dp_44"
        android:layout_alignParentRight="true">

        <View
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/size_dp_1"
            android:layout_height="@dimen/size_dp_20"
            android:background="@color/black_1A" />

    </RelativeLayout>

</RelativeLayout>