<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_dp_30"
        android:layout_marginTop="@dimen/size_dp_1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/my_money_item_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size_dp_1"
            android:layout_weight="9"
            android:background="#ffe5e5e5"
            android:gravity="center"
            android:text="用户名"
            android:textColor="@color/black_D9"
            android:textSize="@dimen/size_sp_10" />

        <TextView
            android:id="@+id/my_money_item_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size_dp_1"
            android:layout_weight="8"
            android:background="#fff1f2f5"
            android:gravity="center"
            android:text="联系方式"
            android:textColor="@color/black_D9"
            android:textSize="@dimen/size_sp_10" />

        <TextView
            android:id="@+id/my_money_item_data"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size_dp_1"
            android:layout_weight="8"
            android:background="#ffe5e5e5"
            android:gravity="center"
            android:text="日期"
            android:textColor="@color/black_D9"
            android:textSize="@dimen/size_sp_10" />

        <TextView
            android:id="@+id/my_money_item_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size_dp_1"
            android:layout_weight="6"
            android:background="#fff1f2f5"
            android:gravity="center"
            android:text="消费金额"
            android:textColor="@color/black_D9"
            android:textSize="@dimen/size_sp_10" />

        <TextView
            android:id="@+id/my_money_item_money"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size_dp_1"
            android:layout_weight="6"
            android:background="#ffe5e5e5"
            android:gravity="center"
            android:text="收益"
            android:textColor="@color/black_D9"
            android:textSize="@dimen/size_sp_10" />
    </LinearLayout>
</LinearLayout>