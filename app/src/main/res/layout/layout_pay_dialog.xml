<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/vip_pay_dialog_bac"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/size_dp_16"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:text="选择支付方式"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/layout_pay_recy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10" />


    <RelativeLayout
        android:id="@+id/layout_pay_rl"
        android:background="@drawable/message_dialog_btn_txt_color_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="69dp"
        android:layout_marginRight="69dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_dp_30">

        <TextView
            android:layout_marginRight="@dimen/size_dp_16"
            android:layout_marginLeft="@dimen/size_dp_16"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_4"
            android:textSize="@dimen/size_sp_16"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即支付" />
    </RelativeLayout>
</LinearLayout>