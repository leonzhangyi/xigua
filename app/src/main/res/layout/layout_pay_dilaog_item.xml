<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_pay_dialog_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_dp_20"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/pay_dialog_check"
        android:background="@drawable/pay_check_back"
        android:layout_width="@dimen/size_dp_20"
        android:layout_height="@dimen/size_dp_20"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/size_dp_30" />


    <LinearLayout
        android:layout_marginLeft="@dimen/size_dp_20"
        android:layout_toRightOf="@+id/pay_dialog_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.sunfusheng.GlideImageView
            android:id="@+id/pay_dialog_icon"
            android:layout_width="@dimen/size_dp_30"
            android:layout_height="@dimen/size_dp_30" />

        <TextView
            android:layout_marginLeft="@dimen/size_dp_11"
            android:id="@+id/pay_dialog_tv"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/size_sp_16" />
    </LinearLayout>
</RelativeLayout>