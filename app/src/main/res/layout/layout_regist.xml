<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bac"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_dp_20">


            <ImageView
                android:id="@+id/login_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/size_dp_6"
                android:padding="@dimen/dp_10"
                android:src="@mipmap/back_left_white" />

            <TextView
                android:id="@+id/title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="绑定手机"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_launcher" />
        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/size_dp_20"
                android:text="账        号"
                android:textColor="@color/white"
                android:textSize="@dimen/size_sp_16" />


            <RelativeLayout
                android:layout_width="213dp"
                android:layout_height="match_parent">
                <!--                android:background="@drawable/login_phone_bac"-->
                <EditText
                    android:id="@+id/layout_login_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请输入手机号码"
                    android:maxLength="11"
                    android:numeric="integer"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_4"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/size_sp_16" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_dp_1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_dp_16"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/size_dp_20"
                android:text="密        码"
                android:textColor="@color/white"
                android:textSize="@dimen/size_sp_16" />


            <RelativeLayout
                android:layout_width="213dp"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/layout_password_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:inputType="numberPassword"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_4"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/size_sp_16" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_dp_1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_dp_16"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/size_dp_20"
                android:text="确认密码"
                android:textColor="@color/white"
                android:textSize="@dimen/size_sp_16" />


            <RelativeLayout
                android:layout_width="213dp"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/layout_password_sure_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请再次输入密码"
                    android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:inputType="numberPassword"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_4"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/size_sp_16" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_dp_1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/login_submit"
            android:layout_width="159dp"
            android:layout_height="@dimen/size_dp_44"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_dp_50"
            android:background="@drawable/login_phone_sub_bac">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableRight="@mipmap/login_back_right"
                android:drawablePadding="@dimen/size_dp_10"
                android:text="确认绑定"
                android:textColor="#FFFA6400"
                android:textSize="@dimen/size_sp_18" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/size_dp_40"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/layout_login_regist"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/dp_10"
                    android:text="账号登录"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_sp_16" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>