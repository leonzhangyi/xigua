<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/size_dp_50"
    android:layout_marginRight="@dimen/size_dp_50"
    android:background="@drawable/vip_pay_dialog_bac"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:text="温馨提示"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_dp_80">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="确定进行此操作？"
            android:textColor="@color/black"
            android:textSize="@dimen/size_sp_18" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/layout_save_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/size_dp_30">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_dp_16"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_marginRight="@dimen/size_dp_16"
                    android:layout_marginBottom="@dimen/dp_4"
                    android:text="确定保存"
                    android:textColor="@color/black_D9"
                    android:textSize="@dimen/size_sp_16" />
            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layout_save_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/size_dp_30"
                android:background="@drawable/message_dialog_btn_txt_color_1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_dp_16"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_marginRight="@dimen/size_dp_16"
                    android:layout_marginBottom="@dimen/dp_4"
                    android:text="取消保存"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_sp_16" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>