<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/test_et"
        android:layout_width="@dimen/size_dp_150"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@null"
        android:hint="请输入imei"
        android:textColor="@color/black_D9"
        android:textColorHint="@color/black_D9"
        android:textSize="@dimen/sp_14" />

    <ImageView
        android:layout_width="@dimen/size_dp_150"
        android:layout_height="@dimen/size_dp_1"
        android:layout_below="@+id/test_et"
        android:layout_centerHorizontal="true"
        android:background="@color/black_D9" />

    <Button
        android:id="@+id/test_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/test_et"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:text="确定" />

</RelativeLayout>