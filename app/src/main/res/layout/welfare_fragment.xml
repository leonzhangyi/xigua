<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/size_dp_5"
    android:layout_marginBottom="@dimen/dp_4"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <com.bigkoo.convenientbanner.ConvenientBanner
            android:id="@+id/welfare_banner"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_marginTop="@dimen/size_dp_10"
            app:canLoop="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welfare_vip_tv1"
                android:textColor="@color/black"
                android:textSize="@dimen/size_sp_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welfare_vip_tv2"
                android:textColor="@color/black"
                android:textSize="@dimen/size_sp_13" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_dp_10"
                android:src="@mipmap/gray_back_right" />
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragment_wef_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.sunfusheng.GlideImageView
            android:id="@+id/fragment_wef_mid_adv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_dp_65"
            android:layout_marginTop="@dimen/size_dp_16"
            android:scaleType="fitXY" />



    </LinearLayout>
</LinearLayout>
